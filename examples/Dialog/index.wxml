<view class="container">

  <view class="doc_title">Dialog</view>

  <view class="model_btns" style="margin-top: 30vh;">
    <button class="model_btn" bindtap="toggleDialog">
      显示Dialog
    </button>
  </view>

  <view class="model_dialog {{ showDialog ? 'model_dialog_show' : '' }}">
    <view class="model_dialog_mask" bindtap="toggleDialog" />
    <view class="model_dialog_container">
      <view style="padding: 100px 0; text-align: center;">Dialog内容</view>
    </view>
  </view>

</view>