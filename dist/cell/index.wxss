/* cell.wxss */

.model_cell {
  position: relative;
  padding: 12px 15px;
  display: flex;
  align-items: center;
  line-height: 1.4;
  font-size: 14px;
}

.model_cell::after {
  position: absolute;
  left: 15px;
  right: 0;
  bottom: 0;
  border-top: 1rpx solid #e5e5e5;
  background: #e5e5e5;
  content: ' ';
}

.model_cell_bd {
  flex: 1;
}

.model_cell_ft {
  position: relative;
  text-align: right;
  color: #666;
}

model_cell_last_child::after, .model_cell:last-child::after {
  display: none;
}

.model_cell_access .model_cell_ft {
  padding-right: 13px;
}

.model_cell_access .model_cell_ft::after {
  position: absolute;
  top: 50%;
  right: 2px;
  content: " ";
  display: inline-block;
  height: 6px;
  width: 6px;
  border-width: 2px 2px 0 0;
  border-color: #c8c8c8;
  border-style: solid;
  transform: translateY(-50%) matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
}

.model_cell_switch {
  padding-top: 6px;
  padding-bottom: 6px;
}
