.model_steps_vsteps {
  color: #999;
  font-size: 14px;
}

.model_steps_vsteps .model_steps_step {
  position: relative;
  padding: 15px 0;
}

.model_steps_vsteps .model_steps_step_done {
  color: #4b0;
}

.model_steps_vsteps .model_steps_line {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 7px;
  width: 1px;
  background-color: #e5e5e5;
}

.model_steps_vsteps .model_steps_title {
  display: inline-block;
  line-height: 20px;
  padding-left: 27px;
}

.model_steps_vsteps .model_steps_title_desc {
  padding-left: 3px;
}

.model_steps_vsteps .model_steps_icons {
  position: absolute;
  left: 7px;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index: 2;
  padding: 3px 0;
  background-color: #fff;
}

.model_steps_vsteps .model_steps_circle {
  width: 5px;
  height: 5px;
  background-color: #cacaca;
  border-radius: 10px;
}

.model_steps_vsteps .model_steps_step_done .model_steps_circle {
  width: 5px;
  height: 5px;
  background-color: #09bb07;
}

.model_steps_vsteps .model_steps_step_cur .model_steps_circle {
  width: 13px;
  height: 13px;
  background: transparent url("https://b.yzcdn.cn/v2/image/wap/success_small@2x.png");
  background-size: 13px 13px;
  border-radius: 0;
}

.model_steps_vsteps .model_steps_icon_active {
  width: 13px;
  height: 13px;
}

.model_steps_vsteps .model_steps_step_first-child .model_steps_title::before {
  content: '';
  position: absolute;
  top: 0;
  bottom: 50%;
  left: 7px;
  width: 1px;
  background-color: #fff;
  z-index: 1;
}

.model_steps_vsteps .model_steps_step_last_child .model_steps_title::after {
  content: '';
  position: absolute;
  top: 50%;
  bottom: 0%;
  left: 7px;
  width: 1px;
  background-color: #fff;
  z-index: 1;
}
