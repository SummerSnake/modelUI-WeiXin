.model_steps_steps.model_steps_5 .model_steps_step {
  width: 25%;
}

.model_steps_steps.model_steps_4 .model_steps_step {
  width: 33%;
}

.model_steps_steps.model_steps_3 .model_steps_step {
  width: 50%;
}

.model_steps_steps .model_steps_step {
  position: relative;
  float: left;
  padding-bottom: 25px;
  color: #b1b1b1;
}

.model_steps_steps .model_steps_title {
  transform: translateX(-50%);
  font-size: 10px;
  text-align: center;
}

.model_steps_steps .model_steps_icons {
  position: absolute;
  top: 30px;
  left: -10px;
  padding: 0 8px;
  background-color: #fff;
  z-index: 10;
}

.model_steps_steps .model_steps_circle {
  display: block;
  position: relative;
  width: 5px;
  height: 5px;
  background-color: #e5e5e5;
  border-radius: 50%;
}

.model_steps_steps .model_steps_line {
  position: absolute;
  left: 0px;
  top: 32px;
  width: 100%;
  height: 1px;
  background-color: #e5e5e5;
}

/* 已完成的steps */

.model_steps_steps .model_steps_step_done {
  color: #333;
}

.model_steps_steps .model_steps_step_done .model_steps_line {
  background-color: #06bf04;
}

.model_steps_steps .model_steps_step_done .model_steps_circle {
  width: 5px;
  height: 5px;
  background-color: #09bb07;
}

/* 正在进行中的steps */

.model_steps_steps .model_steps_step_cur .model_steps_icons {
  top: 25px;
  left: -14px;
}

.model_steps_steps .model_steps_step_cur .model_steps_circle {
  width: 13px;
  height: 13px;
  background-image: url("https://b.yzcdn.cn/v2/image/wap/success_small@2x.png");
  background-size: 13px 13px;
}

.model_steps_steps .model_steps_step_cur .model_steps_line {
  background-color: #e5e5e5;
}

/* 各种不同位置的 */

.model_steps_steps .model_steps_step_first_child .model_steps_title {
  margin-left: 0;
  transform: none;
  text-align: left;
}

.model_steps_steps .model_steps_step_first_child .model_steps_icons {
  left: -7px;
}

.model_steps_steps .model_steps_step_last_child {
  position: absolute;
  right: 0;
  top: 0;
  text-align: right;
}

.model_steps_steps .model_steps_step_last_child .model_steps_title {
  transform: none;
  text-align: right;
}

.model_steps_steps .model_steps_step_last_child .model_steps_icons {
  left: auto;
  right: -6px;
}

.model_steps_steps .model_steps_step_last_child .model_steps_line {
  display: none;
}

/* 有描述的step */

.model_steps_steps .model_steps_step_db_title {
  min-height: 29px;
}

.model_steps_steps .model_steps_step_db_title .model_steps_line {
  top: 45px;
}

.model_steps_steps .model_steps_step_db_title .model_steps_icons {
  top: 43px;
}

.model_steps_steps .model_steps_step_db_title.model_steps_step_cur .model_steps_icons {
  top: 39px;
}
